<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <PackageIcon>spy.png</PackageIcon>
    <ApplicationIcon>spy.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="spy.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="spy.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Pictures\spy.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="spy.png" />
  </ItemGroup>

</Project>
